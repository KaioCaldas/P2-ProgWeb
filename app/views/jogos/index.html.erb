<p id="notice"><%= notice %></p>

<h1>Jogos</h1>

        <%= render 'formbuscatitulo' %>
  
<table>
  <thead>
    <tr>
      <th>Foto</th>
      <th colspan="2">Dados</th>
      <th>Genero</th>
      <th>Plataforma</th>
      <th>Preco</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @jogos.each do |jogo| %>
      <tr>
        <td><%= image_tag jogo.foto, height: '80', width: '60'%></td>
        <td><strong>Titulo:<br> 
        Desenvolvedora: <br>
        Ano:</strong> </td>

        <td><%= jogo.titulo %><br>
        <%= jogo.desenvolvedora %><br>
        <%= jogo.ano %></td>
        <td><%= jogo.genero %></td>
        <td><%= jogo.plataforma %></td>
        <td><%= jogo.preco %></td>
        <td><%= link_to '', jogo , class: "glyphicon glyphicon-sunglasses" %></td>
        <td><%= link_to '', edit_jogo_path(jogo), class: "glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', jogo, method: :delete, data: { confirm: 'Tem certeza?' }, class: "glyphicon glyphicon-erase" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @livros, previous_label: "Anterior", next_label: "Próxima" %>
<br>
<%= link_to 'New Jogo', new_jogo_path %>
