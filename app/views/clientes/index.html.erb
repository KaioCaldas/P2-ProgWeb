<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Telefone</th>
      <th>Endereco</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.cpf %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.endereco %></td>
        <td><%= cliente.email %></td>
        <td><%= link_to '', cliente , class: "glyphicon glyphicon-sunglasses" %></td>
        <td><%= link_to '', edit_cliente_path(cliente), class: "glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', cliente, method: :delete, data: { confirm: 'Tem certeza?' }, class: "glyphicon glyphicon-erase" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cliente', new_cliente_path %>
